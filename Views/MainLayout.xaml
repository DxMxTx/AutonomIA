<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AutonomIA.Views.MainLayout"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:navigationdrawer="clr-namespace:Syncfusion.Maui.Toolkit.NavigationDrawer;assembly=Syncfusion.Maui.Toolkit"
    xmlns:views="clr-namespace:AutonomIA.Views"
    Title="AutonomIA"
    NavigationPage.HasNavigationBar="False">

    <navigationdrawer:SfNavigationDrawer x:Name="NavigationDrawer">
        <navigationdrawer:SfNavigationDrawer.DrawerSettings>
            <navigationdrawer:DrawerSettings DrawerWidth="250" DrawerHeaderHeight="160">
                <navigationdrawer:DrawerSettings.DrawerHeaderView>
                    <Grid BackgroundColor="#0078D4" RowDefinitions="120,40">
                        <Image Source="superasistente.png"
                               HeightRequest="100"
                               Margin="0,10,0,0"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    <Label Text="AutonomIA"
                               Grid.Row="1"
                               HorizontalOptions="Center"
                               FontSize="22"
                               FontFamily="Titulo"
                               TextColor="White"/>
                </Grid>
            </navigationdrawer:DrawerSettings.DrawerHeaderView>
            <navigationdrawer:DrawerSettings.DrawerContentView>
                <VerticalStackLayout Spacing="10" Padding="10">
                    <Button Text="Inicio" FontFamily="Normal" Clicked="GoToHome" />
                    <Button Text="Agenda" FontFamily="Normal" Clicked="GoToAgenda" />
                    <Button Text="Notas" FontFamily="Normal" Clicked="GoToNotas" />
                    <Button Text="Clientes" FontFamily="Normal" Clicked="GoToClientes" />
                    <Button Text="Proveedores" FontFamily="Normal" Clicked="GoToProveedores" />
                    <Button Text="ConfiguraciÃ³n" FontFamily="Normal" Clicked="GoToConfiguracion" />
                </VerticalStackLayout>
            </navigationdrawer:DrawerSettings.DrawerContentView>
        </navigationdrawer:DrawerSettings>
        </navigationdrawer:SfNavigationDrawer.DrawerSettings>

        <navigationdrawer:SfNavigationDrawer.ContentView>
            <Grid RowDefinitions="Auto,*">
                <HorizontalStackLayout BackgroundColor="#0078D4" Padding="10" Spacing="10">
                    <!--<Button x:Name="hamburgerButton"
                                 Text="&#xE70F;" FontSize="18" FontFamily="MaterialAssets" TextColor="Black"
                                 BackgroundColor="#0078D4"
                                 Clicked="hamburgerButton_Clicked"
                                 WidthRequest="30" HeightRequest="30" Visual="Default"/>-->
                    <Button Text="&#xe72c;" FontSize="18" FontFamily="MaterialAssets"  Clicked="hamburgerButton_Clicked"/>
                    <Label Text="&#xe719;" FontFamily="MaterialAssets" />
                    <Label x:Name="headerLabel"
                           Text="AutonomIA"
                           FontSize="20"
                           TextColor="White"
                           FontFamily="Titulo"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <ContentView x:Name="MainContent" Grid.Row="1"/>
            </Grid>
        </navigationdrawer:SfNavigationDrawer.ContentView>
    </navigationdrawer:SfNavigationDrawer>
</ContentPage>
    